<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="24dp"
            android:fontFamily="@font/raleway_bold"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_marginStart="30dp"/>

        <RelativeLayout
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp">

            <LinearLayout
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="150dp">

                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_pic_icon" />


            </LinearLayout>



        </RelativeLayout>



        <TextView
            android:id="@+id/mentor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/raleway_bold"
            android:text="Rion Dsilva"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/journal_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mentor_name"
            android:layout_marginTop="20dp"
            android:src="@drawable/journal_icon" />

        <TextView
            android:id="@+id/journal_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/journal_icon"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/poppins"
            android:text="20"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mentor_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/raleway"
            android:text="Application Number"
            android:textColor="#3499A3"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/faculty_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/poppins"
            android:text="2021118193"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/raleway"
            android:text="Register Number"
            android:textColor="#3499A3"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/school_def"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/poppins"
            android:text="21BCE8083"
            android:textColor="@color/black"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/raleway"
            android:text="Email"
            android:textColor="#3499A3"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/cabin_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/poppins"
            android:text="rion.21bce8083@vitapstudent.ac.in"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/raleway"
            android:text="School"
            android:textColor="#3499A3"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/department_def"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/poppins"
            android:text="School of Computer Science and Engineering"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </RelativeLayout>

</FrameLayout>