<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JournalActivity">
    <EditText
        android:id="@+id/journal_text"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/home_block_1"
        android:elevation="8dp"
        android:ems="10"
        android:fontFamily="@font/raleway"
        android:gravity="top"
        android:hint="Type here"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/save_journal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/journal_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/home_block_1"
        android:elevation="8dp"
        android:fontFamily="@font/raleway_bold"
        android:paddingStart="40dp"
        android:paddingTop="12dp"
        android:paddingEnd="40dp"
        android:paddingBottom="12dp"
        android:text="Save it!"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/previous_journal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save_journal_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/previous_journal"
        android:textColor="#63CCAB"
        android:textSize="24dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"

        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/raleway_bold"
        android:text="How was your day Rion?"
        android:textColor="@color/black"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:layout_toEndOf="@+id/back_button"
        android:fontFamily="@font/raleway_bold"
        android:text="Journal"
        android:textColor="@color/black"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        app:srcCompat="@drawable/back_arrow_top" />


</RelativeLayout>